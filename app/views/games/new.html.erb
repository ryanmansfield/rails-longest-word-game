<h1>New Game</h1>
<p>Here are your letters</p>

<p><%=@letters%></p>

<form action="/score" method="post" id="word-form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Enter Your Word">
  <input type="submit">
</form>

